{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": { "enabled": true },
  "files": {
    "ignore": [".next"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": { "useExhaustiveDependencies": "off" }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  }
}
